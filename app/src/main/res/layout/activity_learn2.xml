<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halfWhite">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_keyboard_backspace_white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingRight="20dp"
            android:text=" LESSON 2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/quest_number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/red"
        android:text="Q1"
        android:layout_marginLeft="50dp"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/halfWhite"
        android:layout_marginLeft="100dp"
        android:text="58-2 = ?"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <EditText
        android:id="@+id/carry3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editcarry_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/question"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="165dp"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        />

    <com.example.Zapitor.a20.sub.learn.ObliqueStrikeEditText
        android:id="@+id/carry2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editcarry_style"
        android:layout_below="@+id/question"
        android:layout_marginTop="90dp"
        android:maxLength="2"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/textBlack"
        />
    <EditText
        android:id="@+id/carry1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editcarry_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/question"
        android:layout_marginTop="90dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="75dp"
        android:textColor="@color/textBlack"/>

    <com.example.Zapitor.a20.sub.learn.ObliqueStrikeTextView
        android:id="@+id/unit_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_below="@+id/carry3"
        android:layout_toRightOf="@+id/ten_ques1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <com.example.Zapitor.a20.sub.learn.ObliqueStrikeTextView
        android:id="@+id/ten_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:layout_below="@+id/carry2"
        android:layout_marginTop="5dp"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/textBlack"
        />
    <com.example.Zapitor.a20.sub.learn.ObliqueStrikeTextView
        android:id="@+id/hund_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:layout_below="@+id/carry1"
        android:layout_marginTop="5dp"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="75dp"
        android:textColor="@color/textBlack"/>

    <TextView
        android:id="@+id/unit_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_below="@+id/unit_ques1"
        android:layout_toRightOf="@+id/ten_ques1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/ten_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:layout_below="@+id/ten_ques1"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/textBlack"
        />

    <TextView
        android:id="@+id/hund_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:layout_below="@+id/hund_ques1"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="75dp"
        android:textColor="@color/textBlack"/>

    <View
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/hund_ques2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/unit_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editanswer_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="165dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        />

    <EditText
        android:id="@+id/ten_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editanswer_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="120dp"
        android:textColor="@color/textBlack"
        />

    <EditText
        android:id="@+id/hund_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editanswer_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="75dp"
        android:textColor="@color/textBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="@color/textBlack"
        android:text="(-)"
        android:layout_below="@+id/hund_ques1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/textBlack"
        android:text="H"
        android:layout_below="@+id/question"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="85dp"/>

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:textSize="20dp"
        android:textColor="@color/textBlack"
        android:layout_below="@+id/question"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="133dp"/>

    <TextView
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/textBlack"
        android:text="O"
        android:layout_below="@+id/question"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="175dp"/>

    <ImageView
        android:id="@+id/response"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.26"
        android:src="@drawable/tick1"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/unit_ans"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/responseT"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:layout_weight="0.36"
        android:text="Answer"
        android:textColor="@color/textBlack"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_toRightOf="@+id/response"
        android:layout_below="@id/view"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/responseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="056"
        android:textSize="20dp"
        android:textColor="@color/dark_green"
        android:layout_toRightOf="@+id/responseT"
        android:layout_below="@+id/view"
        android:layout_marginTop="21dp"
        />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_sub"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible" />

    <EditText
        android:id="@+id/carry4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editcarry_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="number"
        android:maxLength="2"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="45dp"
        />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/light_blue"
        android:text="Confirm"
        android:textSize="28dp"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>