<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level19"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/halfWhite"
    tools:context="com.example.Zapitor.a20.sub.learn.level19">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_keyboard_backspace_white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingRight="20dp"
            android:text=" LESSON 19"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/quest_number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/red"
        android:text="Q1"
        android:layout_marginLeft="50dp"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/halfWhite"
        android:layout_marginLeft="100dp"
        android:text="800-602 = ?"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <LinearLayout
        android:id="@+id/step1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/question"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/o1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="602"

            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/a1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_style"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@color/textBlack"
            android:gravity="center"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="23dp"
            android:text="="
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/o2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="610"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/step1"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="610"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/a2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_style"
            android:layout_marginLeft="15dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:gravity="center"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="23dp"
            android:text="="
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/o4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="700"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/step3"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/step2"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/o5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="700"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/a3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_style"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:textCursorDrawable="@drawable/color_cursor"
            android:gravity="center"
            android:inputType="text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="23dp"
            android:text="="
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/o6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="800"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANSWER"
        android:layout_below="@+id/step3"
        android:textColor="@color/textBlack"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/responseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_below="@+id/ans_step"
        android:gravity="center"
        android:textColor="@color/textBlack"
        android:text="Answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/ansTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="198"
        android:textColor="@color/dark_green"
        android:layout_below="@+id/ans_step"
        android:layout_toRightOf="@id/responseTxt"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/light_blue"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_marginBottom="2dp"
        android:textSize="28dp"
        android:textAllCaps="true"/>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_sub"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ans_step"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/o7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="602"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/textBlack"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/answer1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/editanswer_style"
            android:layout_marginLeft="15dp"
            android:textSize="23dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@color/textBlack"
            android:gravity="center"
            android:inputType="text"
            android:maxLength="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="23dp"
            android:text="="
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/o8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/textBlack"
            android:text="800"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/response"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>
