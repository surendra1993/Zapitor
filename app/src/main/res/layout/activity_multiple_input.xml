<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_multiple_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halfWhite"
    tools:context="com.example.Zapitor.a20.sub.learn.learn5">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_keyboard_backspace_white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingRight="20dp"
            android:text=" LESSON 2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/halfWhite"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/quest_number"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Q1"
          android:layout_marginLeft="5dp"
          android:textColor="@color/red"
          android:textSize="20dp"
         />
        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="Place 74-2 in Correct boxes"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>
    <EditText
        android:id="@+id/carry3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_carry"
        android:layout_below="@+id/question_layout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="195dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:focusable="false"
        android:cursorVisible="false"
        />

    <EditText
        android:id="@+id/carry2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_carry"
        android:layout_below="@+id/question_layout"
        android:layout_marginTop="40dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/textBlack"
        android:focusable="false"
        android:cursorVisible="false"
        />

    <EditText
        android:id="@+id/unit_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/carry3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="195dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:cursorVisible="true"
        />

    <EditText
        android:id="@+id/ten_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/carry2"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/textBlack"
        android:cursorVisible="true"
        />

    <EditText
        android:id="@+id/hund_ques1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/carry1"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="105dp"
        android:textColor="@color/textBlack"
        android:cursorVisible="true"/>

    <EditText
        android:id="@+id/unit_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/unit_ques1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="195dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        />

    <EditText
        android:id="@+id/ten_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_below="@+id/ten_ques1"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/textBlack"
        />

    <View
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@+id/hund_ques2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"/>


    <TextView
        android:id="@+id/h"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:text="H"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/question_layout"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:text="T"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/question_layout"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:text="O"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/question_layout"
        android:layout_marginLeft="208dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/hund_ques2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_below="@id/hund_ques1"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(-)"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@+id/question_layout"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/ten_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_answer"

        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/textBlack"
        android:focusable="false"
        android:cursorVisible="false"
        />

    <EditText
        android:id="@+id/hund_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_answer"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginLeft="105dp"
        android:textColor="@color/textBlack"
        android:focusable="false"
        android:cursorVisible="false"/>
    <ImageView
        android:id="@+id/response"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_weight="0.24"
        android:layout_toRightOf="@+id/unit_ques2"
        android:layout_below="@+id/unit_ques1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/responseTxt"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="Try again !"
        android:layout_toRightOf="@+id/response"
        android:textColor="@color/textBlack"
        android:layout_below="@+id/unit_ques1"
        android:textSize="17dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/unit_ans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_answer"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_below="@id/view"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:cursorVisible="false"/>

    <EditText
        android:id="@+id/carry1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/disable_carry"
        android:inputType="number"
        android:maxLength="1"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/textBlack"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/question_layout"
        android:layout_marginLeft="105dp"
        />
    <Button
        android:id="@+id/btn_sub"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/light_blue"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_marginBottom="2dp"
        android:textSize="28dp"
        android:textAllCaps="true"/>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_sub"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible" />
</RelativeLayout>
