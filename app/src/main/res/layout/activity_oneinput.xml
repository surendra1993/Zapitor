<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_oneinput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Zapitor.a20.sub.learn.learn2"
    android:background="@color/halfWhite">
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_keyboard_backspace_white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/lesson_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingRight="20dp"
            android:text=" LESSON 2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/light_blue"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_marginBottom="2dp"
        android:textSize="28dp"
        android:textAllCaps="true"/>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_sub"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/quest_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q1"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="23sp"/>
        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:layout_weight="0.23"
            android:gravity="center"
            android:text="0 - 0"
            android:textColor="@color/textBlack"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/equal_to"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:text="="
            android:textColor="@color/textBlack"
            android:background="#ffffff"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/answer1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textColor="@color/textBlack"
            android:background="@drawable/editanswer_style"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:maxLength="2"
            android:layout_marginTop="2dp"
            android:layout_weight="0.26"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="25sp"
            android:inputType="text"

            />

        <ImageView
            android:id="@+id/response"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/tick1"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/responseT"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textSize="19dp"
            android:layout_weight="0.36"
            android:text="Answer  "
            android:textColor="@color/textBlack"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/responseTxt"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:text="323"
            android:layout_weight="0.20"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
